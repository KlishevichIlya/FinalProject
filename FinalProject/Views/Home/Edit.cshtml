@model FinalProject.Models.Collection

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Добавление новой коллекции</title>
    <link rel="stylesheet" href="~/css/create.css" />
</head>

<body>
    
    <form class="form-border" asp-action="Update" asp-controller="Home" enctype="multipart/form-data">
        <h3 class="display-4" style="text-align:center; margin-bottom:55px;">Изменение коллекции</h3>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="name" class="control-label nubex1">Имя</label>
            <input type="text" asp-for="name" class="form-control" value="@Model.name" />
        </div>
        <div class="form-group">
            <label asp-for="Topic" class="control-label nubex1">Тема</label>
            <select asp-for="Topic" asp-items="Html.GetEnumSelectList<FinalProject.Models.Topic.Genre>()" class="form-control">
            </select>
        </div>
        <div class="form-group">
            <label asp-for="description" class="control-label nubex1">Описание</label>
            <textarea type="text" asp-for="description" class="form-control" value="@Model.description" style="height:200px;resize:none;margin-bottom:45px;"></textarea>
        </div>

        @*<div class="form-group">*@
        @*<label asp-for="formFile" class="control-label"></label>
        <input type="file" asp-for="formFile" class="form-control" />
        <span asp-validation-for="formFile" class="text-danger"></span>*@
        @*</div>*@
        <div class="drop-zone marg">
            <span class="drop-zone__prompt">Drop file here or click to upload (.jpg, .png, .gif, .jpeg)</span>
            <input type="file" asp-for="formFile" class="drop-zone__input" />
        </div>


        <div class="form-group">
            <button type="submit" value="@Model.Id" name="id" class="btn btn-outline-success but">Изменить</button>
        </div>
    </form>

    <script src="~/js/create.js"></script>    
</body>
</html>