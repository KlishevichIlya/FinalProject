@model FinalProject.Models.Collection

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Добавление новой коллекции</title>
    <link rel="stylesheet" href="~/css/create.css" />
</head>

<body>
    <form asp-action="Update" asp-controller="Home" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="name" class="control-label">Имя</label>
            <input type="text" asp-for="name" class="form-control" value="@Model.name" />
        </div>
        <div class="form-group">
            <label asp-for="description" class="control-label">Описание</label>
            <textarea type="text" asp-for="description" class="form-control" value="@Model.description"></textarea>
        </div>
        @*<div class="form-group">*@
        @*<label asp-for="formFile" class="control-label"></label>
            <input type="file" asp-for="formFile" class="form-control" />
            <span asp-validation-for="formFile" class="text-danger"></span>*@
        @*</div>*@
        <div class="drop-zone">
            <span class="drop-zone__prompt">Drop file here or click to upload</span>
            <input type="file" asp-for="formFile" name="myFile" class="drop-zone__input"/>
        </div>


        <div class="form-group">
            <button type="submit" value="@Model.Id" name="id" class="btn btn-outline-secondary">Изменить</button>
        </div>
    </form>

    <script src="~/js/create.js"></script>
</body>
</html>