@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<FinalProject.Models.Collection>
@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <title>Моя страница</title>
    <link rel="stylesheet" href="~/css/setting.css" />

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        @@media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>

    <link type="text/css" href="~/css/pricing.css" rel="stylesheet">
</head>

<body>

    <main class="container">
        <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
            <h1 class="display-4">@Localizer["Collections"]</h1>
            <p class="lead">@Localizer["Info"]</p>
        </div>

        <div class="text-center myContent">
            <form asp-controller="Home" asp-action="Create" method="get">
                <div class="col">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header text-center">
                            <h4 class="my-0 fw-normal">@Localizer["CardHeader"]</h4>
                        </div>
                        <div class="card-body">
                            <img src="~/images/pen.png" style="width:85px;height:150px; margin-bottom:20px;" />

                            <button type="submit" class="w-100 btn btn-lg btn-outline-primary">@Localizer["CreateButton"]</button>
                        </div>
                    </div>
                </div>
            </form>
            @foreach (var collection in Model)
            {

                <div class="col">
                    <div class="card mb-4 shadow-sm">

                        <div class="card-header text-center">
                            <form action="~/Home/Delete" method="post">
                                <button type="submit" class="close" aria-label="Close" value="@collection.Id" name="id">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </form>
                            <a href="~/Home/Edit?id=@collection.Id" type="submit">
                                <h4 class="my-0 fw-normal">@collection.name</h4>
                            </a>
                        </div>

                        <div class="card-body" id="desc">

                            <div style="width:100%;height:75%; margin-bottom:20px;">
                                <img src="@collection.url" style="width:230px;height:150px;" />
                            </div>
                            <form action="~/Item/Index">
                                <button type="submit" class="w-100 btn btn-lg btn-primary" value="@collection.Id" name="id">@Localizer["ListButton"]</button>
                            </form>
                        </div>
                    </div>
                </div>

            }
        </div>


    </main>
    <script src="~/js/index.js"></script>
</body>

</html>
