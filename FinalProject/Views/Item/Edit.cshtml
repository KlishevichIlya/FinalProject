@model FinalProject.Models.Item
@{
    ViewBag.Title = "Добавление элемента";

}

<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <script src="https://unpkg.com/@@yaireo/tagify"></script>
    <script src="https://unpkg.com/@@yaireo/tagify@3.1.0/dist/tagify.polyfills.min.js"></script>
    <link href="https://unpkg.com/@@yaireo/tagify/dist/tagify.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/css/createItem.css" />
</head>
<body>
    <h1 class="text-center">Изменение выбранного элемента</h1>
    <form asp-action="Update" asp-controller="Item" id="form">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Имя</label>
            <input type="text" asp-for="Name" class="form-control" value="@Model.Name" />
        </div>
        <div class="form-group" id="container">
            <label asp-for="Tags" class="control-label">Теги</label>
            <input name='tagify' tabindex="1">
            
                @foreach (var t in ViewBag.TagForItem)
                {
                    <tag title="@t.TagName" contenteditable="false" spellcheck="false" tabindex="-1" class="tagify__tag " __isvalid="true" value="@t.TagName">
                        <x title="" class="tagify__tag__removeBtn" role="button" aria-label="remove tag"></x>
                        <div><span class="tagify__tag-text">@t.TagName</span></div>
                    </tag>
                }
                <span contenteditable="" data-placeholder="​" aria-placeholder="" class="tagify__input" role="textbox" aria-autocomplete="both" aria-multiline="false"></span>
           


        </div>
        <div class="form-group">
            <input name="id" value="@ViewBag.Id" hidden />
            <input type="submit" value="Изменить" class="btn btn-outline-secondary" id="sendButton" />
        </div>
    </form>

    <script src="~/js/createItem.js"></script>
</body>
</html>